@article{bayani2021,
  author =        {Bayani, Mani},
  institution =   {{Social Science Research Network}},
  number =        {3920293},
  type =          {SSRN Scholarly Paper},
  title =         {Robust {{Pca Synthetic Control}}},
  abstract =      {This study proposes a five-step algorithm for
                   synthetic control method for comparative studies. My
                   algorithm builds on the synthetic control model of
                   Abadie et al., 2015 and the later model of Amjad et
                   al., 2018. I apply all three methods (robust PCA
                   synthetic control, synthetic control, and robust
                   synthetic control) to answer the hypothetical
                   question, what would have been the per capita GDP of
                   West Germany if it had not reunified with East
                   Germany in 1990? I then apply all three algorithms in
                   two placebo studies and a robustness check.},
