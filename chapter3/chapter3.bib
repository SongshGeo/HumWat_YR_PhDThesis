
@article{xujiongxin2011,
	title = {流域产水产沙耦合对黄河下游河道冲淤和输沙能力的影响},
	issn = {0468-155X},
	url = {https://kns.cnki.net/kcms2/article/abstract?v=3uoqIhG8C44YLTlOAiTRKgchrJ08w1e7tvjWANqNvp9KFwzRKzRr-lw96kEFcl0sBOP2BFYRaIM7hmwHDQlpZ-PGl1W9J_s6&uniplatform=NZKPT},
	doi = {10.16239/j.cnki.0468-155x.2011.03.009},
	abstract = {在具有水沙异源特征的流域中,不同水沙来源区的来水来沙之间的关系,可以称为流域水沙耦合关系。流域水沙耦合关系通过流域侵蚀带与沉积带的耦合,会进一步影响沉积带的冲淤过程。对于黄河流域,提出以多沙粗沙区的来沙量和河口镇以上清水区的来水量之比来表示流域产水产沙搭配关系,称之为流域产水产沙耦合指标。无论是对于洪水系列还是对于年系列,黄河下游来沙系数、含沙量与流域产水产沙耦合指标之间都具有密切的关系。流域产水产沙耦合指标控制着下游河道的来沙系数、平均含沙量和最大含沙量,并进而影响河道冲淤量和河道泥沙输移比。黄河下游高含沙水流的发生与流域产水产沙耦合指标Iws之间有密切的关系。当Iws{\textless}0.314t/m3时,下游可不再发生高含沙水流。这启示我们,通过对多沙粗沙区来沙量和河口镇以上清水区来水量的控制,可以减少下游河道高含沙水流发生的频率。对于场次洪水而言,当流域产水产沙耦合指标Iws{\textless}0.2t/m3时,冲淤量、淤积强度变化很小,但当Iws{\textgreater}0.2t/m3以后,冲淤量、淤积强度迅速增大。本文的研究成果对于黄河流域的治理有一定的参考意义。通过对流域水沙耦合关系的调控,来减少下游河道的淤积,是一种可行的途径。},
	language = {zh},
	number = {3},
	urldate = {2023-04-21},
	journal = {泥沙研究},
	author = {{许炯心}},
	year = {2011},
	keywords = {河道泥沙输移, 河道泥沙淤积, 黄河流域 sediment transport, 流域水沙耦合, channel sedimentation, coupling of water and sediment in drainage basin, Yellow River basin},
	pages = {49--58},
}


